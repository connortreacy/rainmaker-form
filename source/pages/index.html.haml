---
title: The Rainmaker Foundation registration form
---

/ = partial "header"

.container
	%ul.steps
		%li.current>
			%a{:href=>"#personal-details"} 01. Your Details
		%li>
			%a{:href=>"#membership-details"} 02. Membership
		%li>
			%a{:href=>"#payment-details"} 03. Payment

	#personal-details.content
		%form
			%label
				Name
				%input{:type=> "text", :name=>"name"}

			%label
				Date of Birth
				%input{:type=> "date", :name=>"date-of-birth"}

			%label
				Email
				%input{:type=> "email", :name=>"email"}

			%label
				Phone
				%input{:type=> "tel", :name=>"phone"}

			%label
				Home Address
				%input{:type=> "text", :name=>"address-line1"}
				%input{:type=> "text", :name=>"address-line2"}

			%label
				Postcode
				%input{:type=> "text", :name=>"postcode"}

			%label
				Job Title
				%input{:type=> "text", :name=>"job-title"}

			%label
				Who referred you?
				%input{:type=> "text", :name=>"referral"}

	#membership-details.content
		%h3 How would you like to join the Rainmaker Foundation?
		%form.membership-type
			.option>
				%input.option-radio{:type=> "radio", :name=>"membership", :value=>"individual"}
				%i.fa.fa-user
				%label Individual
				%ul
					%li 1 person
					%li Suggested minimum donation £1,000/year

			.option>
				%input.option-radio{:type=> "radio", :name=>"membership", :value=>"family"}
				%i.fa.fa-users
				%label Family
				%ul
					%li 2-4 people
					%li Suggested minimum donation £3,000/year

			.option>
				%input.option-radio{:type=> "radio", :name=>"membership", :value=>"company"}
				%i.fa.fa-briefcase
				%label Company
				%ul
					%li 1 company
					%li Suggested minimum donation £6,000/year

	#payment-details.content
		%form
			%label
				Payment
				%input{:type=> "text", :name=>"name"}


